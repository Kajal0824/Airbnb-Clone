<% layout('/layouts/boilerPlate') -%>
<body>
  <h1 class="mt-3">Vacation Property Input Form</h1>
  <div class="row">
    <div class="col-8 offset-2">
  <form method="POST" action="/listings" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input type="text" id="title" name="listing[title]" placeholder="Cozy Beachfront Cottage" class="form-control" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description:</label><br>
      <textarea id="description" name="listing[description]" rows="2" cols="30" class="form-control" placeholder="Add Your Description" required></textarea>
      <div class="invalid-feedback">
        Please enter a short description
      </div>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image URL:</label>
      <input type="url" id="image" name="listing[image]" class="form-control" placeholder="Add Image Url" >
    </div>

    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price &#8377;:</label>
        <input type="number" id="price" name="listing[price]" placeholder="1500" class="form-control" required>
        <div class="invalid-feedback">
          Please enter a valid price
        </div>
      </div>
  
      <div class="mb-3 col-md-8">
        <label for="location" class="form-label">Location:</label>
        <input type="text" id="location" name="listing[location]" placeholder="Malibu" class="form-control" required>
        <div class="invalid-feedback">
          Please enter a valid location
        </div>
      </div>
    </div>

    <div class="mb-3">
      <label for="country" class="form-label">Country:</label>
      <input type="text" id="country" name="listing[country]" placeholder="United States" class="form-control" required>
      <div class="invalid-feedback">
        Please enter a valid country name
      </div>
    </div>  
    <button class="btn btn-dark add-btn">Add</button>
    <br><br>
  </form>
</body>
</div>
</div>

